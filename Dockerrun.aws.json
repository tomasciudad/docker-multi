{
 "AWSEBDockerrunVersion": 2,
 "containerDefinition": [
  {
   "name": "client",
   "image": "tomasciudad/multi-client",
   "hostname": "client",
   "essential": false
  },
  {
   "name": "server",
   "image": "tomasciudad/multi-server",
   "hostname": "api",
   "essential": false
  },
  {
   "name": "worker",
   "image": "tomasciudad/multi-worker",
   "hostname": "worker",
   "essential": false
  },
  {
   "name": "nginx",
   "image": "tomasciudad/multi-nginx",
   "hostname": "nginx",
   "essential": true,
   "portMappings": [
    {
     "hostPort": 80,
     "containerPort": 80
    }
   ],
   "links": ["client", "server"]
  }
 ]
}
